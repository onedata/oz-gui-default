{{#if hasLink}}
  <a href="{{link}}" class="login-icon-box {{type}}">
    {{one-icon icon=iconName}}
    <div class="loader glyphicon glyphicon-refresh glyphicon-refresh-animate"></div>
  </a>
{{else}}
  <a {{action 'clicked'}} class="login-icon-box v-center-parent {{type}}">
    {{#if active}}
      <div class="v-center-child">
        {{spin-spinner scale=0.4 lines=12 length=20 width=10}}
      </div>
    {{else}}
      {{one-icon icon=iconName}}
    {{/if}}
    <div class="loader glyphicon glyphicon-refresh glyphicon-refresh-animate"></div>
  </a>
{{/if}}
